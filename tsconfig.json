{
  "compilerOptions": {
    "incremental": true,
    "target": "ES6",
    "lib": [
      "ES6"
    ],
    "module": "Node16",
    "moduleResolution": "Node16",
    "rootDir": "src",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noUnusedLocals": true
  },
  "requireConfigFile": false,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}